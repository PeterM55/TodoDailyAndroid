<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/oneTimeNotificationsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Time Notifications"
            android:textSize="18dp"

            app:layout_constraintTop_toTopOf="@+id/oneTimeNotificationsButton"
            app:layout_constraintBottom_toBottomOf="@+id/oneTimeNotificationsButton"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/oneTimeNotificationsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:minHeight="0dp"
            android:minWidth="0dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/oneTimeNotificationsTitle"

            android:layout_marginLeft="10dp"/>



        <GridView
            android:id="@+id/oneTimeNotificationsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="2"

            app:layout_constraintTop_toBottomOf="@+id/oneTimeNotificationsButton"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/dailyNotificationsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Notifications"
            android:textSize="18dp"

            app:layout_constraintTop_toBottomOf="@+id/oneTimeNotificationsGrid"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/dailyNotificationsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New"
            android:minHeight="0dp"
            android:minWidth="0dp"

            app:layout_constraintTop_toBottomOf="@+id/oneTimeNotificationsGrid"
            app:layout_constraintLeft_toRightOf="@+id/dailyNotificationsTitle"

            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/dailyNotificationsToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toggle View"
            android:minHeight="0dp"
            android:minWidth="0dp"

            app:layout_constraintTop_toBottomOf="@+id/oneTimeNotificationsGrid"
            app:layout_constraintLeft_toRightOf="@+id/dailyNotificationsButton"

            android:layout_marginLeft="10dp"/>

        <GridView
            android:id="@+id/dailyNotificationsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"

            app:layout_constraintTop_toBottomOf="@+id/dailyNotificationsButton"
            app:layout_constraintLeft_toLeftOf="parent"
            />


        <!--<Button
            android:id="@+id/submitButton"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="you're a nerd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>